@model EasyProject.Models.Product
@{
	ViewData["Title"] = "Product";
}

<div class="container">
	<div class="d-lex justify-content-center">
		<h3>@Model.Name</h3>
	</div>
	<div class="d-lex justify-content-center">
		<img src="@Model.ImageUrl" style="widht: 50%"/>
	</div>
	<div class="d-lex justify-content-center">
		@Model.Price.ToString("N2") $
	</div>
	<div class="d-lex justify-content-center">
		Properties:
		<ul>
			@foreach(var item in Model.ProductProperties)
			{
				<il>
					@item.Properties.Name
				</il>
			}
		</ul>
	</div>
	<a class="btn btn-info" asp-action="Index">Back to Products</a>
</div>
